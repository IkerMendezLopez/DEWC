{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "plugins": [
        "html"
    ],
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-mixed-spaces-and-tabs": 
        ["error", "smart-tabs"]
    }
}